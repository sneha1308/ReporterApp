<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/fabFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <FrameLayout
            android:id="@+id/frame_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="false">

        <RelativeLayout
                android:id="@+id/obstructor"
                android:visibility="invisible"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:keyboardNavigationCluster="false"
                android:alpha="0.5"
                android:background="@android:color/white">
        </RelativeLayout>

    <LinearLayout
            android:id="@+id/llAudioRecord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_gravity="bottom|end"
            android:layout_marginRight="8dp"
            android:paddingRight="16dp"
            android:visibility="gone"
            android:layout_marginBottom="120dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal">

        <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/cardview_light_background"
                app:cardCornerRadius="4dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">
            <TextView
                    android:id="@+id/cvtAttachment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="attachment"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textStyle="bold"
                    android:paddingRight="6dp"
                    android:paddingLeft="6dp"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"/>
        </android.support.v7.widget.CardView>

        <android.support.design.widget.FloatingActionButton
                android:id="@+id/ivAttach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/attach"
                app:backgroundTint="@color/com_facebook_blue"
                app:fabSize="mini"/>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/llVideoRecord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_gravity="bottom|end"
            android:paddingRight="16dp"
            android:visibility="gone"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="170dp"
            android:orientation="horizontal">

        <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/cardview_light_background"
                app:cardCornerRadius="4dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

            <TextView
                    android:id="@+id/cvtEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Photo"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textStyle="bold"
                    android:paddingRight="6dp"
                    android:paddingLeft="6dp"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"/>

        </android.support.v7.widget.CardView>

        <android.support.design.widget.FloatingActionButton
                android:id="@+id/ivVideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/camera"
                android:tint="@color/white"
                app:backgroundTint="@color/com_facebook_blue"
                app:fabSize="mini"/>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/llAttachFiles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingRight="16dp"
            android:visibility="gone"
            android:layout_gravity="bottom|end"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="220dp"
            android:orientation="horizontal">

        <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/cardview_light_background"
                app:cardCornerRadius="4dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

            <TextView
                    android:id="@+id/cvtPhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="audio"
                    android:textStyle="bold"
                    android:paddingRight="6dp"
                    android:paddingLeft="6dp"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"/>

        </android.support.v7.widget.CardView>
        <android.support.design.widget.FloatingActionButton
                android:id="@+id/ivVoiceAssistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/audio"
                android:tint="@color/white"
                app:backgroundTint="@color/com_facebook_blue"
                app:fabSize="mini"/>

    </LinearLayout>
    <LinearLayout
            android:id="@+id/layoutFabSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="50dp"
            android:orientation="horizontal">

        <android.support.design.widget.FloatingActionButton
                android:id="@+id/ivAttachNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_gravity="bottom|end"
                android:src="@mipmap/attach"
                android:outlineSpotShadowColor="@color/colorDividerDark"
                app:backgroundTint="@color/com_facebook_blue"
                app:fabSize="normal"/>

    </LinearLayout>
    </FrameLayout>
</FrameLayout>