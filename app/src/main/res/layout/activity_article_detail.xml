<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.ArticleDetailActivity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
                android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:paddingBottom="2dp"
                      android:orientation="vertical">

            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/tvViewArticleTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingTop="16dp"
                        android:paddingRight="16dp"
                        android:paddingLeft="4dp"
                        android:maxLines="1"
                        android:paddingBottom="16dp"
                        android:layout_marginStart="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:textStyle="bold"
                        android:textColor="#00aeef"
                        android:ellipsize="end"
                        android:textSize="18sp"
                        android:text="KGF Director an Combo? A Stuntxcxcx cxcxcx cxcc xc dd dsds"
                        android:layout_marginLeft="8dp"
                        app:layout_constraintEnd_toStartOf="@+id/tvViewArticleStatusTag"
                />
                <TextView
                        android:id="@+id/tvViewArticleStatusTag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tvViewArticleTitle"
                        app:layout_constraintBottom_toBottomOf="@id/tvViewArticleTitle"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:text="Rejected"
                        android:background="@drawable/rectangle_rounded_corners_filled"
                        app:layout_constraintStart_toEndOf="@+id/tvViewArticleTitle"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="24dp"
                        android:layout_marginRight="24dp"/>

            </android.support.constraint.ConstraintLayout>

            <View
                    android:id="@+id/viewUnderTitle"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    app:layout_constraintTop_toBottomOf="@id/tvViewArticleStatusTag"
                    android:background="@color/colorDivider"/>

            <android.support.v7.widget.CardView
                    android:id="@+id/cvComments"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp">

                <android.support.constraint.ConstraintLayout
                        android:id="@+id/clComments"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:background="@drawable/white_rounded_corners_filled">
                    <TextView
                            android:id="@+id/tvComments"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:text="Comments"
                            android:textSize="16dp"
                            android:textStyle="bold"/>
                   <!-- <TextView
                            android:id="@+id/tvArticleRejectedTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            tools:text="10:45Am"/>
                    <View
                            android:id="@+id/viewForDateTime"
                            android:layout_width="0.5dp"
                            android:layout_height="15dp"
                            app:layout_constraintTop_toTopOf="@+id/tvArticleRejectedTime"
                            app:layout_constraintRight_toLeftOf="@+id/tvArticleRejectedTime"
                            android:layout_marginRight="8dp"
                            android:background="@color/colorDivider"
                            app:layout_constraintBottom_toBottomOf="@+id/tvArticleRejectedTime"/>-->
                    <TextView
                            android:id="@+id/tvArticleRejectedDay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:gravity="end"
                            android:layout_marginRight="8dp"/>
                    <TextView
                            android:id="@+id/tvArticleRejectedReason"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="@id/tvComments"
                            app:layout_constraintTop_toBottomOf="@+id/tvComments"
                            android:layout_marginTop="8dp"/>
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>

            <TextView
                    android:id="@+id/days"
                    android:layout_width="match_parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="4dp"
                    android:paddingRight="15dp"
                    android:textSize="15sp"
                    android:text="dfgsdg"
                    android:textColor="@color/black"
                    android:visibility="visible"
                    android:gravity="end"
                    android:layout_height="wrap_content"/>

            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_margin="8dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/white_rounded_corners_black_divider_dark_ash">

                <android.support.constraint.ConstraintLayout
                        android:id="@+id/clArticleDetailView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="4dp"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp">

                    <LinearLayout
                            android:id="@+id/llArticleCredentials"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent">

                        <TextView
                                android:id="@+id/tvLanguage"
                                android:layout_width="match_parent"
                                android:text="Languages"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_marginStart="8dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="4dp"
                                android:textColor="#c55800"
                                android:textSize="14sp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"/>

                        <TextView
                                android:id="@+id/tvCategories"
                                android:layout_width="match_parent"
                                android:text="Category"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_marginStart="2dp"
                                android:layout_marginLeft="2dp"
                                android:textSize="14sp"
                                android:textColor="#c55800"
                                android:layout_weight="1"
                                android:layout_marginRight="8dp"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                            android:id="@+id/llArticleCredentialsDetails"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            app:layout_constraintTop_toBottomOf="@id/llArticleCredentials"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent">

                        <TextView
                                android:id="@+id/tvGetLanguage"
                                android:layout_width="match_parent"
                                android:text="Englissdsh"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_marginStart="8dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="4dp"
                                android:textSize="14sp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"/>

                        <TextView
                                android:id="@+id/tvGetCategory"
                                android:layout_width="match_parent"
                                android:text="Politics"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_marginStart="2dp"
                                android:layout_marginLeft="2dp"
                                android:textSize="14sp"
                                android:layout_weight="1"
                                android:layout_marginRight="8dp"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                            android:id="@+id/llSubCategoryAndLocation"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:layout_constraintTop_toBottomOf="@+id/llArticleCredentialsDetails"
                            android:orientation="horizontal">

                        <TextView
                                android:id="@+id/tvTextSubCategory"
                                android:layout_width="match_parent"
                                android:text="Sub Category"
                                android:textColor="#c55800"
                                android:layout_marginTop="8dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginLeft="8dp"
                                android:layout_marginStart="8dp"/>

                        <TextView
                                android:id="@+id/tvLocation"
                                android:layout_width="match_parent"
                                android:text="Location"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginStart="2dp"
                                android:layout_marginLeft="2dp"
                                android:textSize="14sp"
                                android:textColor="#c55800"
                                android:layout_marginTop="8dp"
                                android:layout_weight="1"
                                android:layout_marginRight="8dp"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                            android:id="@+id/llGetSubCategoryAndLocation"
                            android:layout_width="match_parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:orientation="horizontal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/llSubCategoryAndLocation"
                            android:layout_height="wrap_content">

                        <TextView
                                android:id="@+id/tvGetSubCategory"
                                android:layout_width="match_parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:text="abc"
                                android:layout_weight="1"
                                app:layout_constraintTop_toBottomOf="@+id/llSubCategoryAndLocation"
                                android:layout_height="wrap_content"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginLeft="8dp"
                                android:layout_marginStart="8dp"/>

                        <TextView
                                android:id="@+id/tvGetLocation"
                                android:layout_width="match_parent"
                                android:text="Hyderabad"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginStart="2dp"
                                android:layout_marginLeft="2dp"
                                android:textSize="14sp"
                                android:layout_weight="1"
                                android:layout_marginRight="8dp"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>


                    <TextView
                            android:id="@+id/tvTextArticleTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#c55800"
                            app:layout_constraintTop_toBottomOf="@+id/llGetSubCategoryAndLocation"
                            android:text="Article Title"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginStart="8dp"/>
                    <TextView
                            android:id="@+id/tvGetArticleTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="acddd"
                            app:layout_constraintTop_toBottomOf="@+id/tvTextArticleTitle"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>

                    <TextView
                            android:id="@+id/tvGetArticleTitle1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:layout_marginTop="8dp"
                            android:text="Article Description"
                            android:textColor="#c55800"
                            app:layout_constraintTop_toBottomOf="@+id/tvGetArticleTitle"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginLeft="8dp"
                            android:layout_marginStart="8dp"/>

                    <TextView
                            android:id="@+id/tvGetArticleDescription"
                            android:layout_width="match_parent"
                            android:text="dummy"
                            android:layout_weight="1"
                            android:ellipsize="none"
                            android:maxLines="100"
                            android:scrollHorizontally="false"
                            app:layout_constraintTop_toBottomOf="@+id/tvGetArticleTitle1"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginLeft="8dp"
                            android:layout_marginStart="8dp"/>
                    <TextView
                            android:id="@+id/tvTextKeywords"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@+id/tvGetArticleDescription"
                            android:textColor="#c55800"
                            android:layout_marginTop="8dp"
                            android:text="Keywords"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginLeft="8dp"
                            android:layout_marginStart="8dp"/>

                    <android.support.v7.widget.RecyclerView
                            android:id="@+id/rvGetArticleKeywords"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:padding="4dp"
                            android:background="@drawable/white_rounded_corners_black_ash"
                            app:layout_constraintTop_toBottomOf="@+id/tvTextKeywords">
                    </android.support.v7.widget.RecyclerView>

                    <TextView
                            android:id="@+id/tvTextattachment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@+id/rvGetArticleKeywords"
                            android:textColor="#c55800"
                            android:text="Attachment" app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginLeft="8dp"
                            android:layout_marginStart="8dp"/>

                    <android.support.v7.widget.RecyclerView
                            android:id="@+id/rvGetAttachment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@+id/tvTextattachment">
                    </android.support.v7.widget.RecyclerView>
                </android.support.constraint.ConstraintLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>