<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:id="@+id/layout_keywords_atachment"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_margin="4dp"
        android:orientation="horizontal" xmlns:tools="http://schemas.android.com/tools">
    <TextView
            android:id="@+id/tvGetArticleKeyword"
            android:layout_width="wrap_content"
            tools:text="Crime Crime1"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="1"
            android:textSize="16sp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_height="wrap_content"/>

    <ImageView
            android:id="@+id/ivClearKeywordAndAttachedFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:src="@drawable/ic_clear_black_24dp"/>
</LinearLayout>