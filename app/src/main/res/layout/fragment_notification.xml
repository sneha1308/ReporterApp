<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cvNotificatiom"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/viewUnderTitle"
        android:background="@color/colorDividerDark">

    <android.support.constraint.ConstraintLayout
            android:id="@+id/clComments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp">
        <TextView
                android:id="@+id/tvArticleRejectedReason"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tvArticleRejectedTime"
                tools:text="Please attach proper Images and check article title also "
                app:layout_constraintRight_toLeftOf="@+id/tvArticleRejectedTime"/>

        <TextView
                android:id="@+id/tvArticleRejectedTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/tvArticleRejectedReason"
                app:layout_constraintLeft_toRightOf="@+id/tvArticleRejectedReason"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="10:45Am"/>
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
